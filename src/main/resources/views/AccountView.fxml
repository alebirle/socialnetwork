<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AccountController">
    <children>
        <GridPane alignment="BASELINE_CENTER" layoutY="40.0" prefHeight="243.0" prefWidth="800.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" text="Welcome!" GridPane.halignment="CENTER">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <TextField fx:id="textEmail" prefHeight="25.0" prefWidth="349.0" promptText="Email" GridPane.fillWidth="false" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                <PasswordField fx:id="textPassword" prefHeight="27.0" prefWidth="122.0" promptText="Password" GridPane.fillWidth="false" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                <Button mnemonicParsing="false" onAction="#handleLogin" prefHeight="27.0" prefWidth="122.0" text="Login" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Button>
                <Label alignment="CENTER" text="Don't have an account?" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                <Button mnemonicParsing="false" onAction="#handleRegister" prefHeight="27.0" prefWidth="122.0" text="Register" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
